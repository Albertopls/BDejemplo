<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eduardopalacios.bdejemplo.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpapercar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:text="SQLite"
            android:textColor="#f55d52"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/placa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/disenio_edittext"
            android:hint="Placa"
            android:padding="10dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/disenio_edittext"
            android:hint="Marca"
            android:padding="10dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/modelo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/disenio_edittext"
            android:hint="Modelo"
            android:padding="10dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/disenio_edittext"
            android:hint="DescripciÃ³n"
            android:padding="10dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/insertar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#d8f55a52"
                android:text="Insertar"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/actualizar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#d8f55a52"
                android:text="Actualizar"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/eliminar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#d8f55a52"
                android:text="Eliminar"
                android:textColor="#ffffff" />
        </LinearLayout>


        <Button
            android:id="@+id/mostrar_Todo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#d8f55a52"
            android:text="MostrarTodo"
            android:textColor="#ffffff" />


    </LinearLayout>




</FrameLayout>
